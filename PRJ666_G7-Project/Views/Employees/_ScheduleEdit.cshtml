@model PRJ666_G7_Project.Models.EmployeeScheduleEditFormViewModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h3>@Model.ShiftStart.ToString("MMM dd, yyyy | hh:mmtt")</h3>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("Clock In"), "ClockInOut", "Employees", new { shiftId = Model.Id, inOut = true }, new { @class = "btn btn-default" })
        </div>
        <h4>@Model.ClockInTime.ToString()</h4>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("Clock Out"), "ClockInOut", "Employees", new { shiftId = Model.Id, inOut = false }, new { @class = "btn btn-default" })
        </div>
        <h4>@Model.ClockOutTime.ToString()</h4>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TaskList, htmlAttributes: new { @class = "control-label col-md-2" })
        @foreach (var t in Model.TaskList)
        {
            <div class="checkbox">
                <label><input type="checkbox" name="TaskIds" checked="@t.Selected" value="@t.Value" />@t.Text</label>
            </div>
        }
        @Html.ValidationMessageFor(model => model.TaskList, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div> 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
