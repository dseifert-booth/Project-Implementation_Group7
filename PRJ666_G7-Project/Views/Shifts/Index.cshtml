            @tuesday.ToString("dddd") @tuesday.ToString("dd")
        </th>
        <th class="text-center">
            @wednesday.ToString("dddd") @wednesday.ToString("dd")
        </th>
        <th class="text-center">
            @thursday.ToString("dddd") @thursday.ToString("dd")
        </th>
        <th class="text-center">
            @friday.ToString("dddd") @friday.ToString("dd")
        </th>
        <th class="text-center">
