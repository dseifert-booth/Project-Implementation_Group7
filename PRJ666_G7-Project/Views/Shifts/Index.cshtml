                @foreach (var shift in shifts.ShiftsDaily)
                    {
                            <a hreff="#" class="edditShiftbtn" data-toggle="modal" data-target="#AddShiftModal" data-shiftday="@shifts.ShiftsDate" data-shiftStartDateTime="@shift.ShiftStart" data-shiftEndDateTime="@shift.ShiftEnd" data-shiftId="@shift.Id">
