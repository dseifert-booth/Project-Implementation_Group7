        </th>
        
    </tr>

@foreach (var item in Model) {
<tr>
    

    <td>
        @item.FullName
    </td>


    @foreach (var shifts in item.ShiftsWeekly)
        {
            <td>
                @*<span>@Html.ActionLink("+", "Edit", new { id = item.Id }) </span> <br />*@
